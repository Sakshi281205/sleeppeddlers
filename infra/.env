WATSONX_API_KEY=xxx

# IBM Project ID
WATSONX_PROJECT_ID=xxx

# IBM base URL for watsonx endpoints
WATSONX_BASE_URL=https://us-south.ml.cloud.ibm.com

# IBM Granite model ID
WATSONX_MODEL_ID=ibm/granite-13b-chat-v2
