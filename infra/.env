# API key required for API Gateway endpoints
API_KEY=hackathon-demo-key

# CORS origin for frontend requests (use * for demo)
ALLOW_ORIGIN=*

# Lambda function names
AI_LAMBDA_NAME=ai-analysis-function
LLM_LAMBDA_NAME=llm-processing-function

